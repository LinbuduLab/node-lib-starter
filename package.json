{
  "name": "linbudu-lib-starter",
  "version": "0.0.3",
  "description": "NodeJS library develop quick start: TypeScript + CI/CD + Release Workflow + Linter + Changelog + ...",
  "main": "dist/index.js",
  "types": "dist/types",
  "scripts": {
    "release": "release-it",
    "release:dry": "release-it --dry-run",
    "dev": "tsnd --respawn --transpile-only  ./src/demo.ts",
    "build": "tsc",
    "build:watch": "tsc --watch",
    "check": "tsc --noEmit",
    "commit": "git add -A & git-cz",
    "lint": "eslint .",
    "lint:fix": "eslint --fix .",
    "format": "prettier --check .",
    "format:fix": "prettier --write .",
    "test": "jest --color --runInBand",
    "test:watch": "jest --color --watch --verbose --passWithNoTests",
    "test:affected": "jest --lastCommit",
    "test:list": "jest --listTests"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/linbudu599/node-lib-starter.git"
  },
  "keywords": [],
  "author": "linbudu",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/linbudu599/node-lib-starter/issues"
  },
  "homepage": "https://github.com/linbudu599/node-lib-starter#readme",
  "devDependencies": {
    "@commitlint/cli": "^13.1.0",
    "@commitlint/config-conventional": "^13.1.0",
    "@release-it/conventional-changelog": "^3.3.0",
    "@types/eslint": "^7.28.0",
    "@types/jest": "^27.0.1",
    "@types/node": "^16.7.1",
    "@typescript-eslint/eslint-plugin": "^4.29.2",
    "@typescript-eslint/experimental-utils": "^4.29.2",
    "@typescript-eslint/parser": "^4.29.2",
    "auto-changelog": "^2.3.0",
    "chalk": "^4.1.2",
    "commitizen": "^4.2.4",
    "commitlint-config-cz": "^0.13.2",
    "consola": "^2.15.3",
    "cross-env": "^7.0.3",
    "cz-conventional-changelog": "^3.3.0",
    "cz-customizable": "^6.3.0",
    "eslint": "^7.32.0",
    "eslint-config-prettier": "^8.3.0",
    "jest": "^27.0.6",
    "prettier": "^2.3.2",
    "release-it": "^14.11.5",
    "ts-jest": "^27.0.5",
    "ts-node": "^10.2.1",
    "ts-node-dev": "^1.1.8",
    "typescript": "^4.3.5"
  },
  "dependencies": {
    "tslib": "^2.3.1"
  },
  "config": {
    "commitizen": {
      "path": "node_modules/cz-customizable"
    }
  }
}
